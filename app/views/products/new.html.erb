<h1 style="font-size: 20px; color:black;">Add Product</h1>

<%= form_for(@product, url: new_product_path , html:{id: 'new_product', :autocomplete => 'off' , method: :post,remote: true}) do |f| %>
  <%= f.hidden_field :user_id,value: current_user.id %>

  <div class="form-group ">
    <%= f.label :name %><span class="required">*</span>
    <%= f.text_field :name ,:placeholder => :name  %>
  </div>

  <div class="form-group">
    <%= f.label :description %><span class="required">*</span>
    <%= f.text_area :description ,:placeholder => :text %>
  </div>

  <p>
    <%= f.submit "submit"%>
  </p>
  <% end %>


