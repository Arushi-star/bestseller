<%= button_to "Back" , dashboard_path , method: :get %>
	<div class="container">
	 <%= image_pack_tag "media/images/Love-your-product.png",height: "100", width: 100 %>
	 </div>
	<div class = "container">
	   <p style="font-size: 20px;color: black;" class="dark head-lg head-xl text-center" align="text-right">Bestseller</p><h6 style="color: purple;">where products matters</h6><%= image_pack_tag "media/images/logo.jpeg", alt:"", height:"48", width:"40", class:"img-fluid" %>
	</div><br><br>
	  

		<% if @product_detail.present? %>
		  <div style="padding: 20px; margin: 40px;">
		    
		   <div class ="position-relative mb-3 exclusive-img exclusive-small" >
				 <% if @product_detail.images.attached? %>
				 <% @product_detail.images.each do |image| %>
		          <%= image_tag image ,width: "300px",resize_to_fit: [300, 200] %>   
				 <% end %>
           	 <% end %>
		    </div>
		      <div class="container">
		        <%= @product_detail.images.count %>
		        Images
		      </div>

		    <div class="container-left">
		    <h2 class="text-left">
		   	 <%= @product_detail.name? ? @product_detail.name.capitalize : "N-A" %>
		   </h2>  <h3>(<%= @product_detail.price? ? currency_format(@product_detail.price) : "N-A"  %>)</h3>

		   </div>

		   <div class="text-center">
              <h6 style="color: red;">Name of the product owner</h6><%= @product_detail.user.name.capitalize %>
		   </div> 
            
		   <h4 class="text-left"><%= @product_detail.color.present? ? @product_detail.color : 'N-A'  %> <i class="fas fa-palette"></i></h4><h4><%= @product_detail.description.present? ? @product_detail.description : 'N-A'  %></h4><h4><%= @product_detail.category_types.present? ? @product_detail.category_types : 'N-A'  %> <i class="fas fa-align-justify"></i></h4>
		         
		   
		<% end %>